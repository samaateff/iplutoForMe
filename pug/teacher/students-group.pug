extends layout
include ../components/mixins

append variable
  - 
    let page            = "subjects"
    let pageTitle       = "المعلم - المجموعات الدراسية - الكمياء - الصف الثاني الثانوي"


//- content This page
block teacherContent
  // Start teacher heading section
  section.teacher-heading
