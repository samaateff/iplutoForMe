    a.add-teaching(href="#add_students_group", data-bs-toggle="modal")
      i.fa-solid.fa-plus
      span اضافة مجموعة جديدة
  // End teacher heading section
  // Start school level section
  article.school-level-section
    - for(let i = 1; i <= 6; i++)
      secrion.school-level.special
