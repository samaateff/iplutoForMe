extends layout
include ../components/mixins

append variable
  - 
    let page            = "subjects"
    let pageTitle       = "المعلم - مجموعة يوم السبت - الرياضيات - الصف الاول الثانوي"


//- content This page
block teacherContent
  // Start teacher heading section
  section.teacher-heading
    a.students-info-box(href=`${siteDomin}/teacher/students-group-students.html`)
      h3.info-heading الطلاب
      ul.info-images 
        - for(let i = 1; i <= 4; i++)
          li.image-item #[img(src=`${siteDomin}/assets/images/teacher-info.webp`, alt="student image")]
        li.image-item.end +22
    .heading-box
      h1.heading.text-center مادة الرياضيات
      p.description.text-center مجموعة يوم السبت
    .students-info-actions
      a.third-button(href="#") الحصص المسجلة
      a.add-teaching(href="#add_students_group", data-bs-toggle="modal")
        i.fa-solid.fa-plus
        span تسجيل حصة جديدة
  // End teacher heading section
  // Start teacher material lessons section
  article.teacher-material
    section.material-accordion.accordion#questions
      section.accordion-item
        h2.accordion-header(data-bs-toggle="collapse" data-bs-target=`#material_1` aria-expanded="true" aria-controls=`#material_1`) 
          .box
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M17 22.75H7C2.59 22.75 1.25 21.41 1.25 17V15C1.25 10.59 2.59 9.25 7 9.25H17C21.41 9.25 22.75 10.59 22.75 15V17C22.75 21.41 21.41 22.75 17 22.75ZM7 10.75C3.42 10.75 2.75 11.43 2.75 15V17C2.75 20.57 3.42 21.25 7 21.25H17C20.58 21.25 21.25 20.57 21.25 17V15C21.25 11.43 20.58 10.75 17 10.75H7Z" fill="#7AE582"/><path d="M6 10.75C5.59 10.75 5.25 10.41 5.25 10V8C5.25 5.1 5.95 1.25 12 1.25C16.48 1.25 18.75 3.18 18.75 7C18.75 7.41 18.41 7.75 18 7.75C17.59 7.75 17.25 7.41 17.25 7C17.25 5.02 16.65 2.75 12 2.75C7.64 2.75 6.75 4.85 6.75 8V10C6.75 10.41 6.41 10.75 6 10.75Z" fill="#7AE582"/><path d="M12 19.25C10.21 19.25 8.75 17.79 8.75 16C8.75 14.21 10.21 12.75 12 12.75C13.79 12.75 15.25 14.21 15.25 16C15.25 17.79 13.79 19.25 12 19.25ZM12 14.25C11.04 14.25 10.25 15.04 10.25 16C10.25 16.96 11.04 17.75 12 17.75C12.96 17.75 13.75 16.96 13.75 16C13.75 15.04 12.96 14.25 12 14.25Z" fill="#7AE582"/></svg>
            span الوحدة الاولي - تجربة مجانية
          i.fa-solid.fa-chevron-down
        .accordion-collapse.collapse.show(data-bs-parent="#questions", id=`material_1`)
          .accordion-body
            a.material-lesson(href=`${siteDomin}/teacher/chapter-lessons.html`)
              .image 
                img(src=`${siteDomin}/assets/images/lesson-image.webp`, alt="الفصل الاول - مقدمة التأسيس")
              .content.flex-grow-1
                .box-between
                  section.text
                    h3.heading الفصل الاول - مقدمة التأسيس
                    ul.lesson-meta 
                      li ( 3 ) دروس
                      li ( 1 ) اختبارات
                  section.lesson-progress(data-percentage="90" data-progress-color="#040349" data-bg-color="#E9E9E9")
                    section.inner-circle
                    section.content
                      p.percentage 90%
            a.material-lesson.locked(href=`${siteDomin}/teacher/chapter-lessons.html`)
              .image 
                img(src=`${siteDomin}/assets/images/lesson-image.webp`, alt="الفصل الاول - مقدمة التأسيس")
              .content.flex-grow-1
                .box-between
                  section.text
                    h3.heading الفصل الثاني - قانون اوم للدوائر المغلقة
                    ul.lesson-meta 
                      li ( 3 ) دروس
                      li ( 1 ) اختبارات
                  section.lesson-progress(data-percentage="21" data-progress-color="#040349" data-bg-color="#E9E9E9")
                    section.inner-circle
                    section.content
                      p.percentage 21%
            a.material-lesson.locked(href=`${siteDomin}/teacher/chapter-lessons.html`)
              .image 
                img(src=`${siteDomin}/assets/images/lesson-image.webp`, alt="الفصل الاول - مقدمة التأسيس")
              .content.flex-grow-1
                .box-between
                  section.text
                    h3.heading الفصل الثاني - قانون اوم للدوائر المغلقة
                    ul.lesson-meta 
                      li ( 3 ) دروس
                      li ( 1 ) اختبارات
                  section.lesson-progress(data-percentage="0" data-progress-color="#040349" data-bg-color="#E9E9E9")
                    section.inner-circle
                    section.content
                      p.percentage 0%
      - for(let i = 2; i <= 4; i++)
        section.accordion-item.locked
          h2.accordion-header.collapsed(data-bs-toggle="collapse" data-bs-target=`#material_${i}` aria-expanded="false" aria-controls=`#material_${i}`) 
            .box
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M17 22.75H7C2.59 22.75 1.25 21.41 1.25 17V15C1.25 10.59 2.59 9.25 7 9.25H17C21.41 9.25 22.75 10.59 22.75 15V17C22.75 21.41 21.41 22.75 17 22.75ZM7 10.75C3.42 10.75 2.75 11.43 2.75 15V17C2.75 20.57 3.42 21.25 7 21.25H17C20.58 21.25 21.25 20.57 21.25 17V15C21.25 11.43 20.58 10.75 17 10.75H7Z" fill="#7AE582"/><path d="M6 10.75C5.59 10.75 5.25 10.41 5.25 10V8C5.25 5.1 5.95 1.25 12 1.25C16.48 1.25 18.75 3.18 18.75 7C18.75 7.41 18.41 7.75 18 7.75C17.59 7.75 17.25 7.41 17.25 7C17.25 5.02 16.65 2.75 12 2.75C7.64 2.75 6.75 4.85 6.75 8V10C6.75 10.41 6.41 10.75 6 10.75Z" fill="#7AE582"/><path d="M12 19.25C10.21 19.25 8.75 17.79 8.75 16C8.75 14.21 10.21 12.75 12 12.75C13.79 12.75 15.25 14.21 15.25 16C15.25 17.79 13.79 19.25 12 19.25ZM12 14.25C11.04 14.25 10.25 15.04 10.25 16C10.25 16.96 11.04 17.75 12 17.75C12.96 17.75 13.75 16.96 13.75 16C13.75 15.04 12.96 14.25 12 14.25Z" fill="#7AE582"/></svg>
              span الوحدة الثانية - التيار الكهربي وقانون أوم وقانونا كيرشوف
            i.fa-solid.fa-chevron-down
          .accordion-collapse.collapse(data-bs-parent="#questions", id=`material_${i}`)
            .accordion-body
              a.material-lesson.locked(href=`${siteDomin}/teacher/chapter-lessons.html`)
                .image 
                  img(src=`${siteDomin}/assets/images/lesson-image.webp`, alt="الفصل الاول - مقدمة التأسيس")
                .content.flex-grow-1
                  .box-between
                    section.text
                      h3.heading الفصل الاول - مقدمة التأسيس
                      ul.lesson-meta 
                        li ( 3 ) دروس
                        li ( 1 ) اختبارات
                    section.lesson-progress(data-percentage="70" data-progress-color="#040349" data-bg-color="#E9E9E9")
                      section.inner-circle
                      section.content
                        p.percentage 70%
              a.material-lesson.locked(href=`${siteDomin}/teacher/chapter-lessons.html`)
                .image 
                  img(src=`${siteDomin}/assets/images/lesson-image.webp`, alt="الفصل الاول - مقدمة التأسيس")
                .content.flex-grow-1
                  .box-between
                    section.text
                      h3.heading الفصل الثاني - قانون اوم للدوائر المغلقة
                      ul.lesson-meta 
                        li ( 3 ) دروس
                        li ( 1 ) اختبارات
                    section.lesson-progress(data-percentage="0" data-progress-color="#040349" data-bg-color="#E9E9E9")
                      section.inner-circle
                      section.content
                        p.percentage 0%
  // End teacher material lessons section 
