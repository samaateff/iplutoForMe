extends profile-setting
include ../components/mixins

append variable
  - 
    pageTitle = "المعلم - تعديل البريد الإلكتروني"


//- content This page
block profileContent
  // Start profile change data section
  section.profile-change-data
    h2.profile-heading تغيير البريد الالكتروني
    form.register-form.needs-validation(action=`${siteDomin}/teacher/profile-confirmation-code.html`, novalidate)
      section.input-field.profile-field
        input.form-control#user_email(type="email", name="user_email", required, placeholder="اكتب البريد الالكتروني الجديد")
        span.invalid-feedback الرجاء كتابة بريد إلكتروني صالح.
      button.submit.mt-4(type="submit") التالي
  // End profile change data section