  // End Add codes section section
  // Modal => operation success
  section.main-popup#success_popup.modal.fade(tabindex="-1" aria-hidden="true")
    .modal-dialog.modal-dialog-centered
      .modal-content
        section.modal-header
          button.btn-close(type="button", data-bs-dismiss="modal", aria-label="Close")
            i.fa-solid.fa-xmark
        section.modal-body
          section.student-popup-heading 
            .icon.large #[img(src=src=`${siteDomin}/assets/images/add-level-success.webp` alt="success")]
            .heading
              h2.mb-2 تم انشاء اكواد الدعوة بنجاح
              p.description يمكنك تصفح اكواد الدعوة
            a.button(href=`${siteDomin}/teacher/addition-codes-levels.html`) اكواد الدعوة
