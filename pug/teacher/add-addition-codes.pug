extends layout
include ../components/mixins

append variable
  - 
    let page            = "addition-codes"
    let pageTitle       = "المعلم - إضافة اكواد إضافة "


//- content This page
block teacherContent
  // Start teacher heading section
  section.student-heading
    h1.heading.text-center انشاء كود دعوة جديد
  // End teacher heading section
  // Start Add codes section section
  section.add-codes-section
    form.register-form.needs-validation(action="", novalidate)
      section.custom-select.dropdown
        label(for="school_level") اختر المرحلة الدراسية
        input#school_level(type="hidden", name="school_level")
        button.input-button(type="button" data-bs-toggle="dropdown" aria-expanded="false")
          span اختر الصف الدراسي 
          i.fa-solid.fa-chevron-down
        ul.dropdown-menu
          - for (let i = 1; i <= 6; i++)
              a.dropdown-item(data-select-value="secondary-school-2" href="#") الصف الثالث الثانوي, علمي علوم
        span.invalid-feedback الرجاء اختيار الصف الدراسي.
      section.custom-select.dropdown
        label(for="subject_teach") اختر المادة الدراسية
        input#subject_teach(type="hidden", name="subject_teach")
        button.input-button(type="button" data-bs-toggle="dropdown" aria-expanded="false")
          span اختر المادة الدراسية 
          i.fa-solid.fa-chevron-down
        ul.dropdown-menu
          - for (let i = 1; i <= 6; i++)
              a.dropdown-item(data-select-value="secondary-school-2" href="#") رياضيات
        span.invalid-feedback الرجاء اختيار المادة الدراسية.
      section.custom-select.dropdown
        label(for="students_group") اختر المجموعة
        input#students_group(type="hidden", name="students_group")
        button.input-button(type="button" data-bs-toggle="dropdown" aria-expanded="false")
          span اختر المجموعة الدراسية 
          i.fa-solid.fa-chevron-down
        ul.dropdown-menu
          - for (let i = 1; i <= 6; i++)
              a.dropdown-item(data-select-value="students-group-1" href="#") مجموعة يوم السبت
        span.invalid-feedback الرجاء اختيار المجموعة الدراسية.
      section.input-field
        input.form-control#codes_number(type="number", minlength ="3", maxlength="35", name="codes_number", required, placeholder="الرجاء كتابة عدد اكواد الدعوة المطلوبة")
        span.invalid-feedback الرجاء كتابة عدد اكواد صحيح.
        label(for="codes_number") عدد الاكواد
