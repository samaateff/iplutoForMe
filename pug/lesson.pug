extends layout
include components/mixins

append variable
  - 
    let page            = "lesson"
    let pageTitle       = "اي بلوتو - درس كذا من مادة كذا"

//- content This page
block pageContent
  // Start Breadcrumb section
  section.breadcrumb-section
    .container-lg
        nav(style="--bs-breadcrumb-divider: '-';" aria-label="breadcrumb")
          ol.breadcrumb
            li.breadcrumb-item
              a(href=`${siteDomin}/`) الرئيسية
            li.breadcrumb-item
              a(href=`${siteDomin}/teachers.html`) المدرسين
            li.breadcrumb-item
              a(href=`${siteDomin}/teacher-profile.html`) أ. سيف دياب محمدي
            li.breadcrumb-item.active  الفصل الاول - مقدمة التأسيس
  // End Breadcrumb section 
  // Start lesson section
  section.lesson-page
    .container-lg
      article.lesson-layout 
        section.lesson-video 
          section.video-palyer 
            video(src=`${siteDomin}/assets/images/teacher-video.mp4` controls poster=`${siteDomin}/assets/images/footer-logo.webp`) 
          section.video-actions 
            button.lesson-action.active(type="button")
              i.fa-regular.fa-thumbs-up
              span اعجبني
            button.lesson-action(type="button")
              i.fa-regular.fa-thumbs-down
              span لم يعجبني
            button.lesson-action(type="button", data-bs-toggle="modal", data-bs-target="#share_popup" )
              i.fa-regular.fa-share-from-square
              span مشاركة
            button.lesson-action(type="button")
              i.fa-regular.fa-bookmark
              span حفظ
          nav(style="--bs-breadcrumb-divider: '-';" aria-label="breadcrumb")
            ol.breadcrumb.lessons-breadcrumb
              li.breadcrumb-item
                a(href=`${siteDomin}/student/teacher-profile.html`) أ. سيف دياب محمدي
              li.breadcrumb-item
                a(href=`${siteDomin}/student/lesson.html`)  الفصل الاول - مقدمة التأسيس 
              li.breadcrumb-item.active   1- الدرس الاول - العلاقات وتمثيلها بياني
