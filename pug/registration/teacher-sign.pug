extends ../layout
include ../components/mixins

append variable
  - 
    let page            = "teacher-sign"
    let pageTitle       = "اي بلوتو - تسجيل حساب معلم"

//- content This page
block pageContent
  // Start registration section
  section.registration-section
    .container-lg
      article.registration-box
        section.register-heading 
          h4.teacher-title قُم لِلمُعَلِّمِ وَفِّهِ التَبجيلا كادَ المُعَلِّمُ أَن يَكونَ رَسولا
          h1.heading سجل حسابك علي منصتنا الان
        form.register-form.needs-validation(action=`${siteDomin}/registration/confirmation-code.html`, novalidate)
          .input-field
            input.form-control#user_name(type="text", minlength ="3", maxlength="35", name="user_name", required, placeholder="اكتب اسمك")
            span.invalid-feedback الرجاء كتابة اسم مستخدم صالح (من 3 إلى 35 حرف).
            label(for="user_name") الاسم بالكامل
            span.icon #[i.fa-regular.fa-user]
          .custom-select.dropdown
            label المؤهل العلمي
            input#user_qualification(type="hidden", name="user_qualification")
            button.input-button(type="button" data-bs-toggle="dropdown" aria-expanded="false")
              span اختر المؤهل العلمي 
              i.fa-solid.fa-chevron-down
            ul.dropdown-menu
              - for (let i = 1; i <= 6; i++)
                  a.dropdown-item(data-select-value="secondary-school-2" href="#") بكالوريوس تربية نوعية
            span.invalid-feedback الرجاء اختيار المؤهل العلمي.
          .custom-select.dropdown
            label سنة الحصول علي المؤهل
            input#qualification_date(type="hidden", name="qualification_date")
            button.input-button(type="button" data-bs-toggle="dropdown" aria-expanded="false")
              span اختر سنة الحصول علي المؤهل 
              i.fa-solid.fa-chevron-down
            ul.dropdown-menu
              - for (let i = 1; i <= 6; i++)
                  a.dropdown-item(data-select-value="secondary-school-2" href="#") 2022
            span.invalid-feedback الرجاء اختيار سنة الحصول علي المؤهل.
          .custom-select.dropdown
            label الصف الدراسي المراد التدريس له
            input#class_teach(type="hidden", name="class_teach")
            button.input-button(type="button" data-bs-toggle="dropdown" aria-expanded="false")
              span اختر الصف الدراسي المراد التدريس له 
              i.fa-solid.fa-chevron-down
            ul.dropdown-menu
              - for (let i = 1; i <= 6; i++)
                  a.dropdown-item(data-select-value="secondary-school-2" href="#") الصف الثالث الثانوي, علمي علوم
            span.invalid-feedback الرجاء اختيار الصف الدراسي المراد التدريس له.
          .custom-select.dropdown
            label المادة الدراسية المراد تدريسها
            input#subject_teach(type="hidden", name="subject_teach")
            button.input-button(type="button" data-bs-toggle="dropdown" aria-expanded="false")
              span اختر المادة الدراسية المراد تدريسها 
              i.fa-solid.fa-chevron-down
            ul.dropdown-menu
              - for (let i = 1; i <= 6; i++)
                  a.dropdown-item(data-select-value="secondary-school-2" href="#") رياضيات
            span.invalid-feedback الرجاء اختيار المادة الدراسية المراد تدريسها.
          .input-field
            input.form-control#user_email(type="email", name="user_email", required, placeholder="اكتب  بريدك الإلكتروني")
            span.invalid-feedback الرجاء كتابة بريد إلكتروني صالح.
            label(for="user_email") البريد الالكتروني
            span.icon #[i.fa-regular.fa-envelope]
          .input-field
            input.form-control#user_phone(type="number", minlength ="11", maxlength="13", name="user_phone", required, placeholder="اكتب رقم هاتفك")
            span.invalid-feedback الرجاء كتابة رقم هاتف صالح.
            label(for="user_phone") رقم الهاتف
            span.icon #[i.fa-solid.fa-mobile-screen]
          button.submit.w-100(type="submit") ارسال
  // End registration  section