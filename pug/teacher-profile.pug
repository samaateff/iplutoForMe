    let page            = "teacher-profile"
    let pageTitle       = "اي بلوتو - أ. سيف دياب محمدي"

//- content This page
block pageContent
  // Start teacher Header section
  section.main-space
    .container-lg
      section.teacher-info 
        section.image 
          img(src=`${siteDomin}/assets/images/teacher-info.webp`, alt="سيف دياب محمدي")
        section.content 
          h1.name أ. سيف دياب محمدي
          h4.heading معلم اول
          article.info-box 
            section.info
              .icon #[img(src=`${siteDomin}/assets/images/icons/book.svg` alt="icon")]
              h3.info-heading مادة الفيزياء, كمياء
            section.info 
              .icon  #[img(src=`${siteDomin}/assets/images/icons/video-circle.svg` alt="icon")]
              h3.info-heading عدد الدروس ( #[span.special 22] )
            section.info 
              .rate 
                i.fa-solid.fa-star
                i.fa-solid.fa-star
                i.fa-solid.fa-star
                i.fa-solid.fa-star
                i.fa-regular.fa-star
              h3.info-heading ( #[span.special 34] ) تقييم ايجابي
  // End teacher Header section 
  // Start teacher brief section
  section.main-space
    .container-lg
      article.teacher-resume
        h2.second-heading.mb-0
          span السيرة الذاتية
          span.icon  #[img(src=`${siteDomin}/assets/images/icons/edit-pen.svg` alt="pen icon")]
        section.teacher-brief
          .image 
            video(src=`${siteDomin}/assets/images/teacher-video.mp4` controls controlsList="nodownload" poster=`${siteDomin}/assets/images/teacher-info.webp`) 
          .content
            h3.heading نبذة عن المعلم
